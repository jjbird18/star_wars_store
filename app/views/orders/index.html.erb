<h1>All orders</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Products</th>
      <th>Total</th>
      <th>User</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
    <tr>
      <td>
        <%= order.id %>
      </td>
      <td>
        <ul>
          <% order.order_items.each do |item| %>
            <li>
              <%= item.quantity %>
              <%= item.product.name %>
            </li>
          <% end %>
        </ul>
      </td>
      <td>
        <%= number_to_currency order.total_price %>
      </td>
      <td>
        <address>
          <strong>
            <%= order.user_id.first_name %>
          </strong>
          <br/>

        </address>
      </td>
      <td>
        <p>
          <%= time_ago_in_words order.created_at %>
        </p>
        <p class="text-muted">
          <%= order.created_at.strftime "%b %d, %Y - %H:%M" %>
        </p>
      </td>

    </tr>
  <% end %>
</table>
<script>

  $(function() {
    $("form select").on("change", function() {
      $(this).parent("form").submit();
    });
  });

</script>
