
<div class="container">
		<div class="card2">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						<div class="preview-pic tab-content">
                <%= image_tag @product.image %>
						</div>
					</div>

					<div class="details col-md-6">
						<h3 class="product-title"><%= @product.name %></h3>
						<p class="product-description"><%= @product.description %></p>
						<h4 class="price">current price:<%= number_to_currency @product.price %></h4>

						<div class="action">

              <%= link_to "Add to cart", add_cart_path, class: "btn btn-primary" %>
              <%= link_to 'Back', store_index_path, class: "btn btn-default" %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
