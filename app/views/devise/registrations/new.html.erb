<% content_for(:title, "Create Your Account") %>
<section id="forms">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1><%= yield(:title) %></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'contactForm'}) do |f| %>
                <%= devise_error_messages! %>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <%= f.label :email %>
                        <%= f.email_field :email, required: true, autofocus: true, class: "form-control", placeholder: "Email" %>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <%= f.label :password %>
                        <%= f.password_field :password, placeholder: "Password", class: "form-control", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <%= f.label :password_confirmation %>

                        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control", required: true %>
                    </div>
                </div>
                <div class="form-group">
                  <p>
                    <%= f.text_field :first_name, placeholder: "First name", class: "form-control input-lg" %>
                  </p>
                  <p>
                    <p>
                      <%= f.text_field :last_name, placeholder: "Last name", class: "form-control input-lg" %>
                    </p>
                  </p>
                </div>
                <div class="form-group">
                    <p>
                      <%= f.text_field :address, placeholder: "Address", class: "form-control" %>
                    </p>
                    <p>
                      <%= f.text_field :city, placeholder: "City", class: "form-control" %>
                    </p>
                    <p>
                      <%= f.text_field :state, placeholder: "State", class: "form-control" %>
                    </p>
                    <p>
                      <%= f.text_field :country, placeholder: "Country", class: "form-control" %>
                    </p>
                    <p>
                      <%= f.text_field :postal_code, class: "form-control", placeholder: "Zip Code" %>
                    </p>
                  </div>
                  <p>
                    <%= f.text_field :phone, class: "form-control", placeholder: "Phone" %>
                  </p>
                </div>
                <br>
                <div class="row">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <%= f.submit "Sign up", class: "btn btn-success btn-lg" %>
                    </div>
                </div>

                <% end %>
                <div class="shared-login-links">
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</section>
